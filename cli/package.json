{
  "name": "fwdcast",
  "version": "1.0.0",
  "description": "Temporary file sharing - stream local files as a public website without uploading",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "fwdcast": "./dist/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "prebuild": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "keywords": [
    "file-sharing",
    "tunnel",
    "temporary",
    "streaming",
    "share",
    "local",
    "websocket",
    "cli",
    "npx"
  ],
  "author": "vamsiy",
  "repository": {
    "type": "git",
    "url": "https://github.com/vamsiy78/fwdcast"
  },
  "homepage": "https://github.com/vamsiy78/fwdcast#readme",
  "bugs": {
    "url": "https://github.com/vamsiy78/fwdcast/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "commander": "^12.1.0",
    "mime-types": "^3.0.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^22.10.0",
    "@types/ws": "^8.5.13",
    "fast-check": "^3.23.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
